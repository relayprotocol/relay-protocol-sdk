{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": ["**/*.ts", "**/*.json"]
}
